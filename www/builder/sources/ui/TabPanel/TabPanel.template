<div class="app-tab-panel" scope="1">
	{foreach ~tabs as &idx => &tab}
		<div class="app-tab" data-index="{&idx}">
			{&tab['title']}
		</div>
	{/foreach}
	{if isObject(~rest)}
		<div class="app-tab app-tab-rest{$count?' shown'}">
			{~rest['title']||@restTabs}
			{if ~rest['showCount']}
				 ({$count})
			{/if}
		</div>
	{/if}
</div>