<forma class="app-form-controls{~className?' '+~className}" method="{~method}" action="{~action}" data-ajax="{~ajax?1}" data-iframe="{~iframe?1}" scope>
	<:content/>
	{foreach ~controls as &control}
		<FormField args="{&control}"/>
	{/foreach}
	{if ~submit}
		<Submit props="{~submit}" onSubmit="onSubmit"/>
	{/if}	
</forma>